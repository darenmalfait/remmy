{
	"extends": "@nerdfish/config/typescript",
	"compilerOptions": {
		"allowImportingTsExtensions": false,
		"noEmit": false,
		"outDir": "./build/"
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	},
	"exclude": ["node_modules", "build"],
	"include": [
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.tsx",
		"first-run.js",
		"jest.config.ts",
		"main.js"
	]
}
