{
  "name": "remmy",
  "version": "1.0.0",
  "private": true,
  "description": "File renamer for invoices and expenses.",
  "keywords": [
    "remmy",
    "invoice-rename",
    "file-rename",
    "electron",
    "shell",
    "app",
    "tray"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/darenmalfait/remmy.git"
  },
  "license": "MIT",
  "author": "Daren Malfait <daren@nerdfish.be> (https://nerdfish.be)",
  "main": "main.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "dev": "run-p watch start:dev",
    "lint:src": "eslint --ext .js,.jsx,.ts,.tsx .",
    "lint:types": "tsc --noEmit",
    "make:macos": "electron-builder --mac --universal",
    "make:win": "electron-builder --win",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "start:dev": "nodemon --watch src --watch ./build --exec electron . -–enable-logging",
    "start": "electron . -–enable-logging",
    "test": "NODE_OPTIONS=--experimental-vm-modules yarn exec jest",
    "validate": "run-s lint:*",
    "watch": "webpack --config webpack.common.js --watch"
  },
  "dependencies": {
    "@electron/remote": "^2.0.9",
    "@headlessui/react": "^1.7.13",
    "@nerdfish/tailwind-config": "^1.0.1",
    "@nerdfish/theme": "^1.0.1",
    "@nerdfish/ui": "^1.1.0",
    "@nerdfish/utils": "^1.0.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "assert": "^2.0.0",
    "autoprefixer": "^10.4.14",
    "axios": "=1.3.5",
    "date-fns": "^2.29.3",
    "electron-updater": "^5.3.0",
    "extract-date-js": "^1.0.1",
    "final-form": "^4.20.9",
    "framer-motion": "^10.11.0",
    "fs-extra": "^11.1.1",
    "imagemagick-stream": "^4.1.1",
    "is-stream": "^3.0.0",
    "lodash": "^4.17.21",
    "lucide-react": "^0.130.1",
    "menubar": "^9.3.0",
    "moment": "^2.29.4",
    "node-fetch": "^3.3.1",
    "nprogress": "=0.2.0",
    "postcss": "^8.4.21",
    "react": "=18.2.0",
    "react-dom": "=18.2.0",
    "react-emojione": "=5.0.1",
    "react-final-form": "^6.5.9",
    "react-router-dom": "^6.10.0",
    "react-transition-group": "^4.4.5",
    "stream-to-array": "^2.3.0",
    "tailwindcss": "^3.3.1",
    "tesseract.js": "^4.0.3",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.0",
    "@types/lodash": "^4.14.192",
    "@types/node": "^18.15.11",
    "@types/react": "^18.0.33",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-transition-group": "^4.4.5",
    "chai": "^4.3.7",
    "css-loader": "^6.7.3",
    "electron": "^24.0.0",
    "electron-builder": "^23.6.0",
    "electron-notarize": "^1.0.1",
    "eslint": "^8.37.0",
    "eslint-config-daren": "^4.1.1",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "mocha": "^10.2.0",
    "nock": "^13.3.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^15.1.0",
    "postcss-loader": "^7.2.4",
    "postcss-nesting": "^11.2.2",
    "react-test-renderer": "=18.2.0",
    "style-loader": "^3.3.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "webpack": "^5.78.0",
    "webpack-cli": "^5.0.1",
    "webpack-merge": "^5.8.0"
  },
  "build": {
    "appId": "com.electron.remmy",
    "productName": "Remmy",
    "files": [
      "build/**/*",
      "assets/**/*",
      "index.html",
      "LICENSE",
      "main.js",
      "first-run.js"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/app-icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements/entitlements.mac.plist",
      "entitlementsInherit": "./entitlements/entitlements.mac.plist",
      "publish": [
        "github"
      ]
    },
    "dmg": {
      "icon": "assets/images/app-icon.icns",
      "sign": false
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/app-icon.ico"
    }
  }
}
