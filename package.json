{
  "name": "remmy",
  "version": "1.0.1",
  "private": true,
  "description": "File renamer for invoices and expenses.",
  "keywords": [
    "remmy",
    "invoice-rename",
    "file-rename",
    "electron",
    "shell",
    "app",
    "tray"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/darenmalfait/remmy.git"
  },
  "author": "Daren Malfait <daren@nerdfish.be> (https://nerdfish.be)",
  "main": "main.js",
  "scripts": {
    "build": "electron-packager . --asar",
    "dev": "run-p watch start:dev",
    "make:macos": "electron-builder --mac --universal",
    "make:win": "electron-builder --win",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "start:dev": "nodemon --watch src --watch ./build --exec electron . -–enable-logging",
    "start": "electron . -–enable-logging",
    "test": "NODE_OPTIONS=--experimental-vm-modules yarn exec jest",
    "checks": "npm-run-all2 format lint typecheck",
    "checks:fix": "npm-run-all2 format:fix lint:fix typecheck",
    "clean": "turbo clean && rm -rf node_modules && rm -rf .turbo",
    "format": "prettier . --check --cache --cache-location=\"node_modules/.cache/prettiercache\"",
    "format:fix": "prettier . --write --cache --cache-location=\"node_modules/.cache/prettiercache\" --log-level=warn",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix --cache --cache-location \"node_modules/.cache/.eslintcache\" --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "watch": "webpack --config webpack.common.js --watch"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@headlessui/react": "^2.2.2",
    "@hookform/resolvers": "^5.0.1",
    "@nerdfish/config": "^1.8.0",
    "@nerdfish/tailwind-config": "^3.9.0",
    "@nerdfish/theme": "^2.5.1",
    "@nerdfish/ui": "^7.10.0",
    "@nerdfish/utils": "^2.0.1",
    "@t3-oss/env-core": "^0.12.0",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/line-clamp": "^0.4.4",
    "@tailwindcss/typography": "^0.5.16",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.21",
    "axios": "=1.8.2",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.7",
    "electron-packager": "^17.1.2",
    "electron-updater": "^6.3.9",
    "extract-date-js": "^1.0.2",
    "final-form": "^4.20.10",
    "framer-motion": "^12.5.0",
    "fs-extra": "^11.3.0",
    "geist": "^1.3.1",
    "lodash": "^4.17.21",
    "lucide-react": "^0.479.0",
    "menubar": "^9.5.1",
    "moment": "^2.30.1",
    "node-fetch": "^3.3.2",
    "npm-run-all2": "^7.0.2",
    "nprogress": "=0.2.0",
    "pdf2json": "^3.1.5",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "postcss-nesting": "^13.0.1",
    "react": "=19.0.0",
    "react-dom": "=19.0.0",
    "react-emojione": "^5.0.1",
    "react-final-form": "^6.5.9",
    "react-hook-form": "^7.54.2",
    "react-router-dom": "^7.3.0",
    "react-transition-group": "^4.4.5",
    "stream-to-array": "^2.3.0",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tailwindcss-motion": "^1.1.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@testing-library/react": "^16.2.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-transition-group": "^4.4.12",
    "chai": "^5.2.0",
    "css-loader": "^7.1.2",
    "electron": "^35.0.1",
    "electron-builder": "^25.1.8",
    "electron-notarize": "^1.2.2",
    "eslint": "^9.21.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^11.1.0",
    "nock": "^14.0.3",
    "nodemon": "^3.1.9",
    "npm-run-all2": "^7.0.2",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-nesting": "^13.0.1",
    "prettier": "^3.5.3",
    "react-test-renderer": "=19.0.0",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.2.6",
    "ts-node": "^10.9.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-merge": "^6.0.1"
  },
  "packageManager": "pnpm@10.6.2",
  "build": {
    "appId": "be.nerdfish.remmy",
    "buildDependenciesFromSource": true,
    "productName": "Remmy",
    "files": [
      "build/**/*",
      "assets/**/*",
      "index.html",
      "main.js",
      "first-run.js",
      "!certificates"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "assets/images/app-icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "./entitlements/entitlements.mac.plist",
      "entitlementsInherit": "./entitlements/entitlements.mac.plist",
      "publish": [
        "github"
      ]
    },
    "dmg": {
      "icon": "assets/images/app-icon.icns",
      "sign": false
    },
    "win": {
      "target": "nsis",
      "icon": "assets/images/app-icon.ico"
    }
  }
}
